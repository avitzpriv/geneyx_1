<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" type="text/css">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<section id="signup2" class="login-register-form-section wide-section">
    <div class="container">
        <div>
            <h3>Registration</h3>
            <form class="form-horizontal" method="post" action="addlab">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-flask"></i></div>
                                <div hidden>
                                    <input type="text" name="country" class="form-control" value="{{country}}">
                                </div>
                                <input type="text" name="name" class="form-control" placeholder="Laboratory name"
                                    required="required" value="">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                <input type="email" name="email" class="form-control" placeholder="e-mail" required="required"
                                    value="">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                                <input type="password" name="password" class="form-control" placeholder="Password"
                                    value="" required="required">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                                <input type="password" name="password2" class="form-control" placeholder="Retype password"
                                    value="" required="required">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-phone"></i></div>
                                <input type="text" name="phone" class="form-control" placeholder="Phone number" value="">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-info"></i></div>
                                <input type="text" name="info1" class="form-control" placeholder="Additional information"
                                    value="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fas fa-hashtag"></i></div>
                                <input type="text" name="license" class="form-control" placeholder="License #" required="required"
                                    value="">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <p>Issue date</p>
                            <div class="form-group ">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fas fa-calendar"></i></div>
                                    <input type="date" name="issued" class="form-control" placeholder="Issue date"
                                        required="required" value="">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-3">
                            <p>Expiry date</p>
                            <div class="form-group ">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fas fa-calendar"></i></div>
                                    <input type="date" name="expiry" class="form-control" placeholder="Expiry date"
                                        required="required" value="">
                                </div>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fas fa-map-marker-alt"></i></div>
                                <textarea rows="3" cols="70" name="address">
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <input type="checkbox" name="agree" value="true" required="required"> I agree with the <a
                                href="#">terms and
                                conditions</a>
                        </div>
                        <div class="form-group ">
                            <input type="checkbox" name="updates" value="true"> I want to get news &amp; updates from
                            Geneyx
                        </div>
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-8">
                            <br>
                            <br>
                            <h4 style:"">Already have an account? <a href="/">Sign In</a></h4>

                            <input type="submit" value="Back" class="btn btn-error btn-custom btn-q">
                            <input type="submit" value="Next" class="btn btn-success btn-custom btn-q">
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>

</section>