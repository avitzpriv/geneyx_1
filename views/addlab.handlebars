<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" type="text/css">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<div class="container">
    <div class="row">
        <h1>{{title}} lab</h1>
    </div>
    <div class="row">
        <div class="cold-md-1">
        </div>
        <div class="cold-md-11">
            <section id="login-register-form-section" class="login-register-form-section">
                <div role="tabpanel" class="tab-pane fade in active" id="login">
                    <form class="form-horizontal" method="post" action={{#if update}}"update"{{else}}"added"{{/if}} >
                        {{#if update}}
                        <div class="form-group" style="display:none">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-flask"></i></div>
                                <input type="text" name="id" class="form-control" placeholder="{{record.id}}" 
                                    value="">
                            </div>
                        </div>
                        {{/if}}
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-flask"></i></div>
                                <input type="text" name="name" class="form-control" placeholder="{{record.name}}" required="required"
                                    value="">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" name="user_name" class="form-control" placeholder="{{record.user_name}}"
                                    required="required" value="">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                                <input type="email" name="user_email" class="form-control" placeholder="{{record.user_email}}" required="required"
                                    value="">
                            </div>
                        </div>
                        <div class="form-group" {{#if update}}style="display:none;"{{/if}}>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                                <input type="password" name="user_pass" class="form-control" placeholder="{{record.user_pass}}"
                                    {{#if update}}{{else}}required="required"{{/if}}>
                            </div>
                        </div>
                        <div class="form-group" {{#if update}}style="display:none;"{{/if}}>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                                <input type="password" name="addlab_user_cpassword" class="form-control" placeholder="Confirm Password"
                                    {{#if update}}{{else}}required="required"{{/if}}>
                            </div>
                        </div>
                        <div class="form-group">
                            <p>Property1</p>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-table"></i></div>
                                <input type="text" name="property1" class="form-control" placeholder="{{record.property1}}"
                                 value="{{record.property1}}">
                            </div>
                        </div>
                        <div class="form-group ">
                            <p>Property2</p>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-table"></i></div>
                                <input type="text" name="property2" class="form-control" placeholder="{{record.property2}}"
                                    value="{{record.property2}}">
                            </div>
                        </div>
                        <input type="submit" value="{{button}}" class="btn btn-success btn-custom">
                    </form>
                </div>
            </section>
        </div>

    </div>
</div>